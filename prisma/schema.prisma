generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum PaymentStatus {
  PENDING
  UPLOADED
  VERIFIED
}

model User {
  id            String         @id @default(uuid())
  firstName     String
  lastName      String
  email         String         @unique
  password      String
  role          Role           @default(USER)
  countryCode   String
  mobileNumber  String
  address       String
  city          String
  zipCode       String
  postalCode    String
  country       String
  category      String
  paymentStatus PaymentStatus  @default(PENDING)
  transactionId String?
  token         String?        @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}
